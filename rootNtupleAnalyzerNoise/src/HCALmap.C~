
//TFile* HBMmapfile=new TFile("/afs/cern.ch/user/h/hsaka/public/HCALmaps/HBM_EtaPhiRBXRM.root","READ");
TFile* HBMmapfile=new TFile("/afs/cern.ch/user/h/hsaka/HCALwork/CMSSW_5_3_7_patch6/src/HcalNoise/HcalNoiseAnalyzer/HBM_EtaPhiRBXRM.root","READ");
HBMmapfile->ls();
TTree* HBMmaptree=(TTree*)(HBMmapfile->Get("tree"));
int iEta;
int iPhi;
int RBX;
int RM;
HBMmaptree->SetBranchAddress("iEta",&iEta);
HBMmaptree->SetBranchAddress("iPhi",&iPhi);
HBMmaptree->SetBranchAddress("RBX", &RBX );
HBMmaptree->SetBranchAddress("RM",  &RM  );
std::cout<<"Verify no of entries in HBM map: "<<HBMmaptree->GetEntries()<<"/1296"<<std::endl;
